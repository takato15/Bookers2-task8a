<table class='table'>
  <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>


  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>

  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
	  <th>
	</tr>

  <tr>
    <th>follows</th>
    <th>
	    <p>
        <%= link_to user_followings_path(user) do %>
          <%= user.followings.count %>
        <% end %>
      </p>
    </th>
  </tr>

  <tr>
    <th>followers</th>
    <th>
	    <p>
        <%= link_to user_followers_path(user) do %>
          <%= user.followers.count %>
        <% end %>
      </p>
    </th>
  </tr>
</table>

<div class='row'>
    <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>

<div class="followbutton">
    <% if current_user.following?(user) %>
      <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "fbtn" %><br><br>
      <%= link_to "チャットを始める", chat_path(user.id),class: "chat-btn" %>
    <% else %>
      <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "fbtn" %>
    <% end %>
</div>